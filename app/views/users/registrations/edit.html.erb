<div class="main">
  <div class = "container">
  <div class = "form-heading user-new">Edit <%= resource_name.to_s.humanize %></div>
    <div class="form users-form">
        <div class="form-body">
  
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class = "field">
      <%= f.label :image, 'アイコンを変更する' %><br />
      <%= f.file_field :image, autofocus: true,  autocomplete: "image"%>
    </div>
    
    <div class = "field">
      <%= f.label :name, '名前' %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    
    <div>
      <%= f.submit "Update" %>
    </div>
  <% end %>
  

    <div class="user-destroy">
      <%= button_to "destroy", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
    
      <p><%= link_to "Back", :back %></p>
      </div>
    </div>
  </div>
</div>
