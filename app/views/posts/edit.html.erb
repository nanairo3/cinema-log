<div class="main">
  <div class = "container">
    <div class = "form-heading">投稿の編集</div>
    <div class = "form">
      <div class="form-body" >
        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_with model: @post, url: "/posts/#{@post.id}/update", local: true do |f| %>
            <%= f.label :content, '投稿' %>
            <%= f.text_field :content %>
            <%= f.submit '更新する', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>