<div class="main">
    <div class = "container">
        <div class="content1">
            <div >
                <%= image_tag @cinema.image %>
            </div>
            <div>
                <%= link_to("#{@cinema.id}/new", class: "btn-circle-3d") do %>
                    <i class="material-icons"> message </i>
                <% end %>
            </div>
        </div>
        <div class="content2">
            <% @posts.each do |post| %>
                <% user = post.user %>
                <div>
                    <%= link_to(user.name, "/users/#{user.id}") %>
                    <%= post.content %>
                </div>
            <% end %>
        </div>
    </div>
</div>