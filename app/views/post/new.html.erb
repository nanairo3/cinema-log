<div class="about-main">
    <div class="container">
        <%= image_tag @cinema.image %>
        <h1 class="form-heading">投稿する</h1>
        <%= form_with model: @post, url: "/post/#{@cinema.id}/create"  do |form| %>
            <%= form.label :content, 'コメント'  %>
            <%= form.text_area :content %>
            <%= form.submit "投稿"  %>
        <% end %>
    </div>
</div>